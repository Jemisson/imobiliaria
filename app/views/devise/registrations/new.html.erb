<div class="col-lg-12 authentic">

  <div class="col-lg-5 form-login">

    <h2 class="login-title">Bem-vindo</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label 'E-mail' %><br />
          <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label 'Senha' %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caracteres no m√≠nimo)</em>
          <% end %><br />
          <%= f.password_field :password, class:"form-control", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label "Confirme sua senha" %><br/>
          <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Cadastrar", class:"btn btn-success pull-left col-lg-4"  %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
  </div>
</div>
